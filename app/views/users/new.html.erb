<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>
<p> It's free and always will be.</p>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url: signup_path) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name %> <br />
      <%= f.text_field :name, class: 'form-control' %> <br />

      <%= f.label :email %> <br />
      <%= f.email_field :email, class: 'form-control' %> <br />

      <%= f.label :password %> <br />
      <%= f.password_field :password, class: 'form-control' %> <br />

      <%= f.label :password_confirmation, "Confirm your password" %> <br />
      <%= f.password_field :password_confirmation, class: 'form-control' %> <br />
      <p class="stmt"> By clicking Create My Account, you agree to our User Terms and Data Policy. Happy Fakebook! </p>
      <%= f.submit "Create My Account", class: "btn btn-primary" %>

    <% end %>
  </div>
</div>
