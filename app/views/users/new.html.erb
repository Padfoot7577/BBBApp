<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>
<p> It's free and always will be.</p>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url: signup_path) do |f| %>
      <%= render 'shared/error_messages' %>
    <div name="signupFormWrapper">
      <div className="signupText"><%= f.label :name %></div>
      <div><%= f.text_field :name, class: 'form-control' %></div>

      <div className="signupText"><%= f.label :email %></div>
      <div><%= f.email_field :email, class: 'form-control' %></div>

      <div className="signupText"><%= f.label :password %></div>
      <div><%= f.password_field :password, class: 'form-control' %></div>

      <div className="signupText"><%= f.label :password_confirmation, "Confirm your password" %></div>
      <div><%= f.password_field :password_confirmation, class: 'form-control' %></div>
      <p class="stmt"> By clicking Create My Account, you agree to our User Terms and Data Policy. Happy Fakebook! </p>
      <div><%= f.submit "Create My Account", class: "btn btn-primary" %></div>
    </div>
    <% end %>
  </div>
</div>
